<!DOCTYPE html>
<html lang="de" xmlns:th="http://www.thymeleaf.org">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Volkswohl Restaurant</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" th:href="@{/css/styles.css}">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&family=Lobster&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.theme.default.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"></script>
    <style>
        .custom-carousel-control {
            background: none;
            border: none;
            outline: none;
            width: 40px;
            height: 40px;
            margin-top: -20px; /* Половина высоты кнопки */
            top: 50%;
            transform: translateY(-50%);
            position: absolute;
        }

        .custom-carousel-control .custom-carousel-icon {
            background-image: none;
            background-color: black;
            border-radius: 50%; /* Делаем кнопки круглыми */
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .custom-carousel-control .carousel-control-prev-icon::after,
        .custom-carousel-control .carousel-control-next-icon::after {
            content: '';
            display: block;
            width: 10px;
            height: 10px;
            border-top: 2px solid white;
            border-right: 2px solid white;
        }

        .custom-carousel-control .carousel-control-prev-icon::after {
            transform: rotate(-135deg);
        }

        .custom-carousel-control .carousel-control-next-icon::after {
            transform: rotate(45deg);
        }

        #reviews-section .carousel-inner {
            display: flex;
            justify-content: center;
        }

        #reviews-section .carousel-item {
            display: flex;
            justify-content: center;
            text-align: center;
        }

        #reviews-section .card {
            max-width: 600px;
            border: none;
            background-color: #4591dd; /* Цвет фона для отзывов */
            position: relative;
        }

        #reviews-section .card-text {
            font-size: 1.5rem;
        }

        #reviews-section .carousel-control-prev,
        #reviews-section .carousel-control-next {
            width: 5%;
        }

        #reviews-section .carousel-control-prev-icon,
        #reviews-section .carousel-control-next-icon {
            background-color: black;
            border-radius: 50%;
            width: 30px;
            height: 30px;
        }



    </style>
</head>

<body>
    <!-- Navbar & Hero Start -->
    <div class="container-xxl position-relative p-0">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">
                    <h1>Volkswohl Restaurant</h1>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="menu">Menu</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="contact">Contact</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <div class="container-xxl py-5 hero-header mb-5">
            <div class="container text-center my-5 pt-5 pb-4">
                <h1 class="display-3 text-white mb-3 animated slideInDown">Welcome to Volkswohl Restaurant</h1>
                <nav aria-label="breadcrumb">
                </nav>
            </div>
        </div>
    </div>
    <!-- Navbar & Hero End -->

    <!-- Carousel Start -->
    <div id="restaurantCarousel" class="carousel slide mx-auto" style="max-width: 800px;" data-bs-ride="carousel">
        <div class="owl-carousel testimonial-carousel">
            <div class="item">
                <img th:src="@{images/Restorant.jpg}" class="d-block w-100" alt="Restorant" style="object-fit: cover; height: 500px;">
            </div>
            <div class="item">
                <img th:src="@{images/Restorant2.jpg}" class="d-block w-100" alt="Restorant2" style="object-fit: cover; height: 500px;">
            </div>
            <div class="item">
                <img th:src="@{images/Restorant3.jpg}" class="d-block w-100" alt="Restorant3" style="object-fit: cover; height: 500px;">
            </div>
            <div class="item">
                <img th:src="@{images/Restorant4.jpg}" class="d-block w-100" alt="Restorant4" style="object-fit: cover; height: 500px;">
            </div>
        </div>
    </div>
    <!-- Carousel End -->


    <!-- About Start -->
    <div class="container-xxl py-5">
        <div class="container">
            <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
                <h1 class="mb-5">Willkommen im Volkswohl Restaurant</h1>
            </div>
            <div class="row g-4">
                <div class="col-lg-4">
                    <div class="d-flex align-items-center">
                        <i class="fa fa-hamburger fa-3x text-primary"></i>
                        <div class="ms-3">
                            <h4 class="text-primary">Köstliches Essen</h4>
                            <p class="mb-0">Erleben Sie authentische griechische Küche mit frischen Zutaten und traditionellen Rezepten.</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="d-flex align-items-center">
                        <i class="fa fa-utensils fa-3x text-primary"></i>
                        <div class="ms-3">
                            <h4 class="text-primary">Qualitätsservice</h4>
                            <p class="mb-0">Unser freundliches Personal sorgt dafür, dass Sie sich wie zu Hause fühlen und Ihre Zeit bei uns genießen.</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="d-flex align-items-center">
                        <i class="fa fa-user-friends fa-3x text-primary"></i>
                        <div class="ms-3">
                            <h4 class="text-primary">Gemütliche Atmosphäre</h4>
                            <p class="mb-0">Genießen Sie Ihr Essen in einer warmen und einladenden Umgebung, perfekt für jede Gelegenheit.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- About End -->

    <!-- Reviews Start -->
    <div class="container-xxl py-5 wow fadeInUp" data-wow-delay="0.1s" id="reviews-section">
        <div class="container">
            <div class="text-center">
                <h1 class="mb-5">Was unsere Kunden sagen</h1>
            </div>
            <div class="owl-carousel testimonial-carousel" id="reviews-content">
                <!-- Динамически добавляемые отзывы -->
            </div>
        </div>
    </div>
    <!-- Reviews End -->

    <!-- Map Start -->
    <div class="container-xxl py-5">
        <div class="container">
            <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
                <h1 class="mb-5">Kommen Sie zu uns</h1>
            </div>
            
            <div data-wow-delay="0.1s">
                <iframe class="position-relative w-100"
                    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d14100.173718729056!2d9.49699654460832!3d51.33720567408542!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47bb39c5c1c7a5bf%3A0x4e8349028962277b!2sVolkswohl!5e0!3m2!1sru!2s!4v1717955354196!5m2!1sru!2s"
                    frameborder="0" style="min-height: 350px; border:0;" allowfullscreen="" aria-hidden="false"
                    tabindex="0">
                </iframe>
            </div>
        </div>
    </div>
    <!-- Map End -->

    <!-- Footer Start -->
    <div class="container-fluid bg-dark text-light footer pt-3 pb-3 mt-5 wow fadeIn" data-wow-delay="0.1s">
        <div class="container py-3">
            <div class="row g-3 justify-content-center">
                <div class="col-lg-3 col-md-6 text-center">
                    <h4 class="section-title ff-secondary text-primary fw-normal mb-3">Kontaktieren Sie Uns</h4>
                    <p class="mb-2"><i class="fa fa-map-marker-alt me-3"></i>Simmershäuser Str. 119, 34125 Kassel, Deutschland</p>
                    <p class="mb-2"><i class="fa fa-phone-alt me-3"></i>+49 561 811664</p>
                </div>
                <div class="col-lg-3 col-md-6 text-center">
                    <h4 class="section-title ff-secondary text-primary fw-normal mb-3">Öffnungszeiten</h4>
                    <h5 class="text-light fw-normal">Monday - Saturday</h5>
                    <p>09AM - 09PM</p>
                    <h5 class="text-light fw-normal">Sunday</h5>
                    <p>10AM - 08PM</p>
                </div>
            </div>
        </div>
    </div>
    <!-- Footer End -->


    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/wow/1.1.2/wow.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.4.1/jquery.easing.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/waypoints/4.0.1/jquery.waypoints.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Counter-Up/1.0.0/jquery.counterup.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment-timezone/0.5.34/moment-timezone-with-data.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.39.0/js/tempusdominus-bootstrap-4.min.js"></script>

    <!-- Template Javascript -->
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBOH_uBQ0Kn9d1cfcJ_apkvNNsztjPeIo0&libr=places"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const placeId = 'ChIJv6XHwcU5u0cReydiiQJJg04'; // Замените на ваш Place ID
            const service = new google.maps.places.PlacesService(document.createElement('div'));

            service.getDetails({ placeId: placeId, language: 'de'  }, (place, status) => {
                if (status === google.maps.places.PlacesServiceStatus.OK) {
                    const reviewsContent = document.getElementById('reviews-content');

                    // Сортировка отзывов по убыванию рейтинга
                    place.reviews.sort((a, b) => b.rating - a.rating);

                    place.reviews.forEach(review => {
                        const reviewDiv = document.createElement('div');
                        reviewDiv.classList.add('testimonial-item', 'bg-transparent', 'border', 'rounded', 'p-4');

                        const quoteIcon = document.createElement('i');
                        quoteIcon.classList.add('fa', 'fa-quote-left', 'fa-2x', 'text-primary', 'mb-3');
                        reviewDiv.appendChild(quoteIcon);

                        const reviewText = document.createElement('p');
                        reviewText.textContent = review.text;
                        reviewDiv.appendChild(reviewText);

                        const authorDiv = document.createElement('div');
                        authorDiv.classList.add('d-flex', 'align-items-center');

                        const authorImage = document.createElement('img');
                        authorImage.classList.add('img-fluid', 'flex-shrink-0', 'rounded-circle');
                        authorImage.src = review.profile_photo_url || 'default-avatar.jpg'; // Замените на путь к вашему изображению по умолчанию
                        authorImage.style.width = '50px';
                        authorImage.style.height = '50px';
                        authorDiv.appendChild(authorImage);

                        const authorInfo = document.createElement('div');
                        authorInfo.classList.add('ps-3');

                        const authorName = document.createElement('h5');
                        authorName.classList.add('mb-1');
                        authorName.textContent = review.author_name;
                        authorInfo.appendChild(authorName);

                        const reviewRating = document.createElement('p');
                        reviewRating.classList.add('card-text', 'text-warning');
                        reviewRating.innerHTML = `${'★'.repeat(review.rating)}${'☆'.repeat(5 - review.rating)}`;
                        authorInfo.appendChild(reviewRating);

                        authorDiv.appendChild(authorInfo);
                        reviewDiv.appendChild(authorDiv);

                        reviewsContent.appendChild(reviewDiv);
                    });

                    // Инициализация карусели Owl Carousel
                    $('.testimonial-carousel').owlCarousel({
                        autoplay: true,
                        smartSpeed: 1000,
                        margin: 30,
                        dots: true,
                        loop: true,
                        nav: false,
                        items: 1
                    });
                } else {
                    console.error('Error fetching place details:', status);
                }
            });
        });
    </script>
</body>
</html>
